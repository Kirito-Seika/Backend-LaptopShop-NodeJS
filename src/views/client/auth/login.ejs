<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css">
    <link rel="stylesheet" href="/auth/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/admin/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="/admin/vendor/jquery/jquery.min.js"></script>
    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            avatarFile.change(function (e) {
                const imgURL = URL.createObjectURL(e.target.files[0]);
                $("#avatarPreview").attr("src", imgURL);
                $("#avatarPreview").css({ "display": "block" });
            });
        });
    </script>
</head>

<body>
    <!--=============== LOGIN IMAGE ===============-->
    <svg class="login__blob" viewBox="0 0 566 840" xmlns="http://www.w3.org/2000/svg">
        <mask id="mask0" mask-type="alpha">
            <path d="M342.407 73.6315C388.53 56.4007 394.378 17.3643 391.538 
            0H566V840H0C14.5385 834.991 100.266 804.436 77.2046 707.263C49.6393 
            591.11 115.306 518.927 176.468 488.873C363.385 397.026 156.98 302.824 
            167.945 179.32C173.46 117.209 284.755 95.1699 342.407 73.6315Z" />
        </mask>

        <g mask="url(#mask0)">
            <path d="M342.407 73.6315C388.53 56.4007 394.378 17.3643 391.538 
            0H566V840H0C14.5385 834.991 100.266 804.436 77.2046 707.263C49.6393 
            591.11 115.306 518.927 176.468 488.873C363.385 397.026 156.98 302.824 
            167.945 179.32C173.46 117.209 284.755 95.1699 342.407 73.6315Z" />

            <!-- Insert your image (recommended size: 1000 x 1200) -->
            <image class="login__img" href="/auth/img/bg-img.jpg" />
        </g>
    </svg>

    <div class="login container grid">
        <div class="login__access">
            <h1 class="login__title">Đăng nhập</h1>

            <div class="login__area">

                <form action="/login" method="post" class="login__form">
                    <div class="login__content grid">
                        <div class="login__box">
                            <input name="email" type="email" id="email" placeholder=" "
                                class="login__input login__pass login__input__pass">
                            <label for="email" class="login__label">Email</label>
                            <i class="ri-mail-fill login__icon"></i>
                        </div>
                        <% if (errors?.email) { %>
                            <div style="margin-left: 10px; color: #e74a3b;">
                                <p>
                                    <%= errors.email %>
                                </p>
                            </div>
                            <% } %>

                                <div class="login__box">
                                    <input name="password" type="password" id="password" placeholder=" "
                                        class="login__input login__pass login__input__pass">
                                    <label for="password" class="login__label">Password</label>
                                    <i class="ri-eye-off-fill login__icon login__password" id="loginPassword"></i>
                                </div>
                                <% if (errors?.password) { %>
                                    <div style="margin-left: 10px; color: #e74a3b;">
                                        <p>
                                            <%= errors.password %>
                                        </p>
                                    </div>
                                    <% } %>

                                        <% if (messages && messages.length) { %>
                                            <div style="margin-left: 10px; color: #e74a3b;">
                                                <% messages.forEach((msg)=> { %>
                                                    <p>
                                                        <%= msg %>
                                                    </p>
                                                    <% }) %>
                                            </div>
                                            <% } %>

                                                <a href="#" class="login__forgot">Quên mật khẩu?</a>
                                                <button type="submit" class="login__button">Đăng nhập</button>
                    </div>
                </form>

                <div class="login__social">
                    <p class="login__social-title">Đăng nhập với</p>

                    <div class="login__social-links">
                        <a href="#" class="login__social-link">
                            <img src="/auth/img/icon-google.svg" alt="image" class="login__social-img">
                        </a>

                        <a href="#" class="login__social-link">
                            <img src="/auth/img/icon-facebook.svg" alt="image" class="login__social-img">
                        </a>

                        <a href="#" class="login__social-link">
                            <img src="/auth/img/icon-apple.svg" alt="image" class="login__social-img">
                        </a>
                    </div>
                </div>

                <p class="login__switch">
                    Bạn chưa có tài khoản?
                    <a href="/register">Đăng ký</a>
                </p>
            </div>
        </div>
    </div>

    <!--=============== MAIN JS ===============-->
    <script src="/auth/js/main.js"></script>
</body>

</html>